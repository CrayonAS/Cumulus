{
  "$schema": "schema.json",
  "actions": [
    {
      "verb": "triggerFlow",
      "url": "<url to logic app>",
      "name": "Monitor custom action on the site",
      "parameters": {
        "event": "Team site creation",
        "product": "SharePoint Online"
      }
    },
    {
      "verb": "installSolution",
      "id": "<solution id>"
    },
    {
      "verb": "associateExtension",
      "title": "Register the Cumulus Team site configuration SPFx extension",
      "location": "ClientSideExtension.ApplicationCustomizer",
      "clientSideComponentId": "<GUID of the extension in app catalog>",
      "clientSiteComponentProperties": "{\"SomePropertyName\":\"SomePropetyValue\"}",
      "scope": "Site"
    }
  ]
}
